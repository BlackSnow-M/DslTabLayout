<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TabSlidingItemStyle" parent="TabItemStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="TabCommonItemStyle" parent="TabItemStyle">
        <item name="android:padding">4dp</item>
    </style>

    <dimen name="lib_padding_left">16dp</dimen>
    <dimen name="lib_padding_right">10dp</dimen>
    <dimen name="lib_dpi">2dp</dimen>
    <dimen name="lib_sdpi">4dp</dimen>
    <dimen name="lib_ldpi">6dp</dimen>
    <dimen name="lib_hdpi">8dp</dimen>
    <dimen name="lib_xhdpi">12dp</dimen>
    <dimen name="lib_xxhdpi">22dp</dimen>
    <dimen name="lib_xxxhdpi">35dp</dimen>
    <dimen name="lib_min_padding">2dp</dimen>
</resources>
